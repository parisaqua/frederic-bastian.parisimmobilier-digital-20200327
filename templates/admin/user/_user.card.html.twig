<div class="card border-primary mb-3" style="max-width: 30rem; display:block; margin:0 auto;">
    <div class="card-header"> {{user.genderType}} {{user.firstName}} {{user.lastName|upper}} &nbsp; <span class="text-info"><a href="{{ path('admin.user.edit', {id: user.id}) }}" title="Modifier mes informations d'identification ..."><i class="fas fa-edit text-info h5"></i></a></span></div>
    <div class="card-body">
    <div class="row align-items-center">
        <div class="col-md-4 text-center">
            <div style="max-width: 180px; display: block; margin: 0 auto;">
                {% if user.profile %}
                    {% if user.profile.imageName %}
                    <img alt="photo de {{ user.username }}" class="avatar" src=" {{  vich_uploader_asset(user.profile, 'imageFile') | imagine_filter('avatar') }}">
                    {% else %}
                        {% if user.gender == 0 %}
                            <img alt="photo de {{ user.fullName }}" class="avatar" src=" {{  '/images/male-avatar.png' | imagine_filter('avatar') }}" alt="Avatar du gestionnaire" title="{{ user.fullName }}">
                        {% else %}
                            <img alt="photo de {{ user.fullName }}" class="avatar" src=" {{  '/images/woman-avatar.png' | imagine_filter('avatar') }}" alt="Avatar du gestionnaire" title="{{ user.fullName }}">
                        {% endif %}
                    {% endif %}
                {% else %}
                {% if user.gender == 0 %}
                    <img alt="photo de {{ user.fullName }}" class="avatar" src=" {{  '/images/male-avatar.png' | imagine_filter('avatar') }}" alt="Avatar du gestionnaire" title="{{ user.fullName }}">
                    {% else %}
                        <img alt="photo de {{ user.fullName }}" class="avatar" src=" {{  '/images/woman-avatar.png' | imagine_filter('avatar') }}" alt="Avatar du gestionnaire" title="{{ user.fullName }}">
                    {% endif %}
                {% endif %}
            </div>
        </div>
        <div class="col-md-8">
            <p class="card-title"><i class="fas fa-envelope text-info"></i>&nbsp;&nbsp;<a href="mailto:{{user.email}}" title="Envoyer un e-mail à {{user.fullName}} "><span class="h5 text-info">Lui écrire ...</span></a></p>
            <p class="card-title"><i class="fas fa-mobile-alt text-info"></i>&nbsp;&nbsp;<span class="h5 text-info">00-00-00-00-00</span></p>
            {% if user.profile %}
                {% if user.profile.description %}
                    <p class="text-left text-info pl-2">{{user.profile.description|nl2br }}</p> 
                {% endif %}
            {% else %}
            <p>Pas de description</p>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <hr>
            {% for role in user.roles %}
                {% if role == 'ROLE_ADMIN' %}
                    <div class="badge badge-warning">Administrateur</div>
                {% elseif role == 'ROLE_PROPERTYMANAGER' %}
                    <div class="badge badge-secondary">Gestionnaire</div>
                {% elseif role == 'ROLE_PROPERTYOWNER' %}
                    <div class="badge badge-info">Propriétaire</div>
                {% elseif role == 'ROLE_PROPERTYTENANT' %}
                    <div class="badge badge-primary">Locataire</div>
                {% endif %}  
            {% endfor %}
        </div>
    </div>
    </div>
</div>